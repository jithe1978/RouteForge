# Build stage
FROM node:20-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
# .env.production supplies VITE_API_BASE at build time
RUN npm run build

# Serve with Nginx
FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
# SPA fallback (no proxying; ALB does /api/* routing)
RUN printf "server {\n  listen 80;\n  root /usr/share/nginx/html;\n  index index.html;\n  location / { try_files \$uri /index.html; }\n}\n" > /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx","-g","daemon off;"]